.main_chat
  .main_chat__group-info
    .main_chat__group-info__group
      .main_chat__group-info__group__title
        test
      %ul.main_chat__group-info__group__menber__list
        Member:
        %li.main_chat__group-info__group__menber__list__first
          aa
    = link_to "#", class: "main_chat__group-info__edit" do
      Edit
  
  .main_chat__message-list
    .main_chat__message-list__table
      .main_chat__message-list__table__top
        %p.main_chat__message-list__table__top__name
          masa
        %p.main_chat__message-list__table__top__date
          2019/11/20(Wed) 17:43:01
      %P.main_chat__message-list__table__text
