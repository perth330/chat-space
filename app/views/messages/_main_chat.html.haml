  .main_chat__message-form
    %form.main_chat__message-form__new-message
      .main_chat__message-form__new-message__input-box
        %input{type: "text",class: "main_chat__message-form__new-message__input-box__input-text", placeholder: "type a message"}
        %label{class: "main_chat__message-form__new-message__input-box__image"}
          = icon('fas' ,'image')
          %input{type: "file", class: "main_chat__message-form__new-message__input-box__image__file"}
      %input{type: "submit", class: "main_chat__message-form__new-message__submit",name: "commit",value: "Send"}